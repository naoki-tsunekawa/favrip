<h1>投稿一覧画面</h1>

<div class="md-3">
	<table class="table">
		<thead>
			<tr>
				<th>画像</th>
				<th>タイトル</th>
				<th>投稿日時</th>
			</tr>
		</thead>
		<tbody>
			<% @posts.each do |post| %>
				<tr>
					<td><%= post.title %></td>
					<td><%= post.created_at %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

<div class="list-container">
	<% @posts.each do |post| %>
		<div class="post-item">
			<div class="item-image-container">
				<img class="item-image" src="<%= "#{post.image}" %>">
			</div>
			<div class="item-title-container">
				<%= post.title %>
			</div>
			<div class="item-description-container">
				<%= post.description %>
			</div>
		</div>
	<% end %>
</div>
