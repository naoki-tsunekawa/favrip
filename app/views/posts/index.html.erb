<% content_for :css do %>
	<%= stylesheet_link_tag 'posts/index' %>
<% end %>

<%# 検索窓 %>
<%= search_form_for @search, class: 'search-form' do |f| %>
	<div class="form-group">
		<%= f.label :address_cont, '名称', class: 'form-label'%>
		<%= f.search_field :address_cont, class: 'form-control'%>
	</div>
	<div class="form-group">
		<%= f.submit class: 'btn-search'%>
	</div>
<% end %>

<%# 投稿カードのパーシャル呼び出し %>
<%= render 'partial/posts_card' %>
