<!DOCTYPE html>
<html>
  <head>
    <title>Favrip</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/ad0b153fee.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%# ナビゲーションバー %>
	<div class="container">

		<div class="nav-header">
			<div class="text">
        <i class="fas fa-map-marker-alt app-name">Favrip</i>
			</div>
		</div>

		<div class="item">
      <%= link_to posts_path do %>
            <div class="text">
              <i class="fas fa-home">ホーム</i>
            </div>
      <%end%>
    </div>

    <div class="item">
			<%= link_to new_post_path do %>
				<div class="text">
					<i class="fas fa-plus">新規作成</i>
				</div>
			<%end%>
		</div>

		<div class="item">
			<a href="#">
				<div class="text">
					<i class="fas fa-user">マイページ</i>
				</div>
			</a>
		</div>

		<div class="item">
			<a href="#">
				<div class="text">
					<i class="fas fa-sign-out-alt">ログアウト</i>
				</div>
			</a>
		</div>

	</div>
    <%= yield %>
  </body>
</html>
