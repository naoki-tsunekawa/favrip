<%# ナビゲーションバー %>
<div class="nav-container">
	<div class="nav-header">
		<div class="text">
			<i class="fas fa-map-marker-alt app-name">Favrip</i>
		</div>
	</div>

	<% if current_user %>
		<div class="item">
			<%= link_to posts_path, data: {"turbolinks" => false} do %>
						<div class="text">
							<i class="fas fa-home">ホーム</i>
						</div>
			<%end%>
		</div>

		<div class="item">
			<%= link_to new_post_path, data: {"turbolinks" => false} do %>
				<div class="text">
					<i class="fas fa-plus">新規作成</i>
				</div>
			<%end%>
		</div>

		<%= link_to admin_user_path(current_user.id), data: {"turbolinks" => false} do %>
			<div class="item">
				<div class="text">
					<i class="fas fa-sign-out-alt">マイページ</i>
				</div>
			</div>
		<% end %>

		<%= link_to logout_path, method: :delete, data: {"turbolinks" => false} do %>
			<div class="item">
				<div class="text">
					<i class="fas fa-sign-out-alt">ログアウト</i>
				</div>
			</div>
		<% end %>

	<% else %>
	<div class="item">
			<%= link_to login_path, data: {"turbolinks" => false} do %>
				<div class="text">
					<i class="fas fa-sign-out-alt">サインアップ</i>
				</div>
			<% end %>
		</div>

		<div class="item">
			<%= link_to new_admin_user_path, data: {"turbolinks" => false} do %>
				<div class="text">
					<i class="fas fa-sign-out-alt">サインイン</i>
				</div>
			<% end %>
		</div>
	<% end %>
</div>
