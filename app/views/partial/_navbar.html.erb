<%# ナビゲーションバー %>
<div class="nav-container">
	<div class="nav-header">
		<div class="text">
			<i class="fas fa-map-marked-alt app-name">Favrip</i>
		</div>
	</div>

	<% if current_user %>
		<div class="item">
			<%= link_to posts_path, data: {"turbolinks" => false} do %>
						<div class="text">
							<i class="fas fa-home">ホーム</i>
						</div>
			<%end%>
		</div>

		<div class="item">
			<%= link_to new_post_path, data: {"turbolinks" => false} do %>
				<div class="text">
					<i class="fas fa-plus">投稿する</i>
				</div>
			<%end%>
		</div>

		<%= link_to admin_user_path(current_user.id), data: {"turbolinks" => false} do %>
			<div class="item">
				<div class="text">
					<i class="fas fa-user">マイページ</i>
				</div>
			</div>
		<% end %>

		<% if current_user.admin? %>
			<%= link_to admin_users_path, data: {"turbolinks" => false}  do %>
				<div class="item">
					<div class="text">
						<i class="fas fa-users">ユーザ一覧</i>
					</div>
				</div>
			<% end %>
		<% end %>

		<%= link_to logout_path, method: :delete, data: {"turbolinks" => false} do %>
			<div class="item">
				<div class="text">
					<i class="fas fa-sign-out-alt">ログアウト</i>
				</div>
			</div>
		<% end %>

	<% else %>
	<div class="item">
			<%= link_to login_path, data: {"turbolinks" => false} do %>
				<div class="text">
					<i class="fas fa-sign-out-alt">ログイン</i>
				</div>
			<% end %>
		</div>

		<div class="item">
			<%= link_to new_admin_user_path, data: {"turbolinks" => false} do %>
				<div class="text">
					<i class="fas fa-sign-out-alt">新規登録</i>
				</div>
			<% end %>
		</div>
	<% end %>
</div>
